<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tictactoc">

    <application
        android:allowBackup="true"
        android:icon="@drawable/tic_tac_toe_icon"
        android:isGame="true"
        android:label="@string/app_name"
        android:roundIcon="@drawable/tic_tac_toe_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".game_layout_onePlayer"></activity>
        <activity android:name=".game_layout_twoPlayer"></activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>